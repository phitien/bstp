<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/detail_content_bg_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/servicesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/restaurantService"
            android:layout_width="@dimen/detail_view_image_icon_width"
            android:layout_height="@dimen/detail_view_image_icon_height"
            android:layout_marginLeft="@dimen/detail_view_image_icon_margin_left"
            android:layout_marginTop="@dimen/detail_view_image_icon_margin_top"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/restaurant_inactive" />

        <ImageView
            android:id="@+id/showerService"
            android:layout_width="@dimen/detail_view_image_icon_width"
            android:layout_height="@dimen/detail_view_image_icon_height"
            android:layout_marginLeft="@dimen/detail_view_image_icon_margin_left"
            android:layout_marginTop="@dimen/detail_view_image_icon_margin_top"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/shower_inactive" />

        <ImageView
            android:id="@+id/voucherService"
            android:layout_width="@dimen/detail_view_image_icon_width"
            android:layout_height="@dimen/detail_view_image_icon_height"
            android:layout_marginLeft="@dimen/detail_view_image_icon_margin_left"
            android:layout_marginTop="@dimen/detail_view_image_icon_margin_top"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/voucher_inactive" />

        <ImageView
            android:id="@+id/calendarService"
            android:layout_width="@dimen/detail_view_image_icon_width"
            android:layout_height="@dimen/detail_view_image_icon_height"
            android:layout_marginLeft="@dimen/detail_view_image_icon_margin_left"
            android:layout_marginTop="@dimen/detail_view_image_icon_margin_top"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/calendar_inactivte" />

        <ImageView
            android:id="@+id/ccService"
            android:layout_width="@dimen/detail_view_image_icon_width"
            android:layout_height="@dimen/detail_view_image_icon_height"
            android:layout_marginLeft="@dimen/detail_view_image_icon_margin_left"
            android:layout_marginTop="@dimen/detail_view_image_icon_margin_top"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/cc_inactive" />

    </LinearLayout>

    <Button
        android:id="@+id/reserveButton"
        style="@style/App_ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/servicesContainer"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="onReserveButtonClicked"
        android:text="@string/action_reserve" />

    <TextView
        android:id="@+id/textViewSecurityLevelLabel"
        style="@style/App_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/security_level" />

    <TextView
        android:id="@+id/textViewSecurityLevel"
        style="@style/App_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewSecurityLevelLabel"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textViewSecurityLevelLabel"
        android:text="3" />

    <ListView
        android:id="@+id/listViewSecurityDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSecurityLevel"
        android:divider="@null"
        android:dividerHeight="0dp" />

</RelativeLayout>